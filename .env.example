# FINTEL AI - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# Google Gemini AI (for OCR and Chat)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# RapidAPI GST Insights (for GST Verification)
# Get your key from: https://rapidapi.com/gst-insights-gst-insights-default/api/gst-insights
RAPIDAPI_KEY=your-rapidapi-key-here
RAPIDAPI_HOST=gst-insights.p.rapidapi.com

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=fintel_ai

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ML Model Settings
ANOMALY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=80
MAX_FILE_SIZE_MB=10
